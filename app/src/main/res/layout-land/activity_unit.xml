<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/calcBackGround"
        tools:context=".UnitActivity">


    <HorizontalScrollView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView"

            android:padding="10dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <Button
                    android:text="@string/length"
                    android:layout_width="wrap_content"
                    android:background="@drawable/unitbutton2"
                    android:layout_height="match_parent" tools:layout_editor_absoluteY="170dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/lengthButton"/>


            <Button
                    android:text="@string/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="170dp"
                    android:background="@drawable/unitbutton2"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/areaButton" android:layout_weight="1"/>
            <Button
                    android:text="@string/mass"
                    android:layout_width="wrap_content"
                    android:background="@drawable/unitbutton2"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="170dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/massButton" android:layout_weight="1"/>
            <Button
                    android:text="@string/volume"
                    android:layout_width="wrap_content"
                    android:background="@drawable/unitbutton2"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="170dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/volumeButton" android:layout_weight="1"/>
            <Button
                    android:text="@string/temp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/unitbutton2"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="170dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/temparatureButton" android:layout_weight="1"/>
            <Button
                    android:text="@string/speed"
                    android:layout_width="wrap_content"
                    android:background="@drawable/unitbutton2"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="170dp"
                    tools:layout_editor_absoluteX="57dp" android:id="@+id/speedButton" android:layout_weight="1"/>

        </LinearLayout>

    </HorizontalScrollView>


    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:gravity="end"
            app:layout_constraintStart_toEndOf="@+id/count"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView"/>
    <EditText
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/count"
            android:inputType="number"
            android:gravity="start" app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:hint="1"
            android:text="" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"/>

    <ScrollView
